<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_index_all" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_toolbar"
        android:orientation="vertical">

        <include layout="@layout/item_toolbar" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/check_update_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_launcher_web" />
        <TextView
            android:id="@+id/check_update_vs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/check_version"
            android:layout_gravity="center_horizontal"
            android:paddingTop="16dp"
            android:layout_marginBottom="40dp"
            android:textSize="16sp"
            android:textColor="@color/light_gray"/>
        <Button
            android:id="@+id/check_update_btn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="@string/check_update"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_single_device" />
        <TextView
            android:id="@+id/check_update_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_version"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:textColor="@color/dark_gray"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>